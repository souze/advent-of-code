logic input =
    input
        |> show String.trim
        |> show String.lines
        |> show (List.map toScore)
        |> show List.sum


toScore : String -> Int
toScore s =
    s
        |> toRpsTups
        |> countScore


countScore : ( Hand, Hand ) -> Int
countScore ( their, mine ) =
    let
        myScore : Int
        myScore =
            case mine of
                R ->
                    1

                P ->
                    2

                S ->
                    3

        roundScore : Int
        roundScore =
            case ( their, mine ) of
                ( R, R ) ->
                    3

                ( P, P ) ->
                    3

                ( S, S ) ->
                    3

                ( R, S ) ->
                    0

                ( P, R ) ->
                    0

                ( S, P ) ->
                    0

                _ ->
                    6
    in
    myScore + roundScore


toRps : Char -> Hand
toRps c =
    case c of
        'A' ->
            R

        'B' ->
            P

        'C' ->
            S

        _ ->
            Debug.todo ""


type Hand
    = R
    | P
    | S


type IntendedResult
    = Lose
    | Draw
    | Win


toIntendedResult : Char -> IntendedResult
toIntendedResult c =
    case c of
        'X' ->
            Lose

        'Y' ->
            Draw

        'Z' ->
            Win

        _ ->
            Debug.todo "intended result out of bounds"


toRpsTups : String -> ( Hand, Hand )
toRpsTups s =
    case String.toList s of
        their :: _ :: mine :: [] ->
            ( toRps their, toIntendedResult mine )
                |> resultToHand

        _ ->
            Debug.todo ("toRpsTups failed, for input: \"" ++ s ++ "\"")


resultToHand : ( Hand, IntendedResult ) -> ( Hand, Hand )
resultToHand ( their, iRes ) =
    ( their
    , case ( their, iRes ) of
        ( _, Draw ) ->
            their

        ( R, Win ) ->
            P

        ( R, Lose ) ->
            S

        ( P, Win ) ->
            S

        ( P, Lose ) ->
            R

        ( S, Win ) ->
            R

        ( S, Lose ) ->
            P
    )



